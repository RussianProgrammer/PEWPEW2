<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sis.pewpew.connections.AuthorizationActivity">

    <EditText
        android:id="@+id/createNickname"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Имя пользователя"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteY="309dp"
        app:layout_constraintRight_toLeftOf="@+id/createEmail"
        android:layout_marginRight="0dp" />

    <EditText
        android:id="@+id/createEmail"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Адрес электронной почты"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteY="370dp"
        app:layout_constraintRight_toLeftOf="@+id/createPassword"
        android:layout_marginRight="0dp" />

    <EditText
        android:id="@+id/createPassword"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Пароль"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="440dp" />

    <Button
        android:id="@+id/createAccountButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:text="Зарегистрироваться"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="501dp" />

    <Button
        android:id="@+id/signInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:text="Вход"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="501dp" />
</android.support.constraint.ConstraintLayout>
